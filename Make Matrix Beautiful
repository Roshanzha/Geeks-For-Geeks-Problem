#User function Template for python3

class Solution:
    def findMinOpeartion(self, matrix, n):
        # Code here
        max_v = 0
        row = 0
        cur_s = 0
        for i in matrix:
            row += 1
            s = sum(i)
            max_v = max(s,max_v)
            cur_s += s
        for j in range(n):
            s = 0
            for i in range(n):
                s += matrix[i][j]
            max_v = max(s,max_v)
        ans = max_v*row - cur_s
        return ans
